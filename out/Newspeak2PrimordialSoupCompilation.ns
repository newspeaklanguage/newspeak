	arguments:: (TupleAST new elements: node message arguments) apply: self.
	^(OrdinarySendAST
		to: Processor
		send: ((MessageAST new
			send: #eventualSendTo:selector:arguments:
			with: {receiver. selector. arguments})
				copyPositionFrom: node message))
