			start: keyw start;
			end: (val isNil ifTrue: [keyw end] ifFalse: [val end])
	].
)
literalMessage = (
	^super literalMessage wrap:
		[:kwsOrMsg |
		kwsOrMsg isCollection
			ifTrue:
				[| sel  args  |
