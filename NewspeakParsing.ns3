'private'
computeDigits: ds <List[Character]> ^ <Integer>= (

| power <Integer> |

power:: ds size. 
^ds inject: 0 into:[:s <Integer> :c <Character> | 
		power:: power - 1.  
		s + ((c - 48) * (10 ** power))
		].
)
computeFraction: ds <List[Character]> ^ <Number>= (

| power <Integer> |

power:: 0. 
^ds inject: 0 into:[:s <Integer>  :c <Character> | 
		power:: power - 1.  
		s + ((c - 48) * (10 ** power))
		].
)
