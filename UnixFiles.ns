    ^self , (FilePattern for: '*')
)
firstWildElementOf: els <SeqCltn[FilePattern]> ifFail: fail <[X def]> ^<Int | X> = (


    1 to: els size do:
        [ :i <Int> |
            (els at: i) isPath
                ifFalse: [ ^i ]
        ].
    ^fail value
)
