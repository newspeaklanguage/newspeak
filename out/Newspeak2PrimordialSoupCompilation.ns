	| original startDepth result |
	original:: valueExpected.
	startDepth:: cgen currentStackDepth.
	valueExpected:: false.
	result:: node apply: self.
	valueExpected:: original.
	cgen currentStackDepth = startDepth ifFalse: [unbalancedStack].
	^result
