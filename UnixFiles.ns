elementsDo: blk <[:FilePattern]>
 = (

	| s <CharacterReadStream> |

	pattern first = '/' ifTrue: [
		blk value: (FilePattern for: '/')].
	
	s:: self pattern readStream.

	[ s atEnd ]
		whileFalse:
			[   | next <Str> |
				next:: s upTo: '/'.
				next isEmpty
					ifFalse: [ blk value: (FilePattern for: next)] ]
)
