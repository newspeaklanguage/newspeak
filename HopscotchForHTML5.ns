  | oldPresenter <Presenter> = equalVisitOr: newPresenter. |
  newPresenter creatingWindow isNil ifFalse: [
    assert: [newPresenter creatingWindow = oldPresenter creatingWindow] message: 'Creating windows differ!'.
    ].
