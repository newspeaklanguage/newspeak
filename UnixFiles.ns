public isExecutable ^<Boolean> = (

    ^self stat: [:stat| 
    		(stat uid == self geteuid
		and: [(stat mode bitAnd: self S_IXUSR) ~= 0])
    		or: [(stat gid == self getegid
		and: [(stat mode bitAnd: self S_IXGRP) ~= 0])
    		or: [(stat mode bitAnd: self S_IXOTH) ~= 0]]] ifFail: [ self statFailed ]
)
